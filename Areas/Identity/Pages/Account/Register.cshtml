@page
@model RegisterModel

    <div class="mt-3">
        <h1 class="text-center">Create New User</h1>
        <hr class="bg-secondary half-width hr-2" />
        <form class="mx-auto half-width" method="post">
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input type="text" class="form-control" id="username" placeholder="Username..." asp-for="Input.Username">
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input type="password" class="form-control" id="password" placeholder="Password..." asp-for="Input.Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password..." asp-for="Input.ConfirmPassword">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input type="text" class="form-control" id="firstName" placeholder="First Name..." asp-for="Input.FirstName">
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SecondName"></label>
                <input type="text" class="form-control" id="fullName" placeholder="Second Name..." asp-for="Input.SecondName">
                <span asp-validation-for="Input.SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input type="text" class="form-control" id="fullName" placeholder="Last Name..." asp-for="Input.LastName">
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UCN"></label>
                <input type="text" class="form-control" id="UCN" placeholder="UCN..." asp-for="Input.UCN">
                <span asp-validation-for="Input.UCN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Number"></label>
                <input type="text" class="form-control" id="Number" placeholder="Number..." asp-for="Input.Number">
                <span asp-validation-for="Input.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input type="email" class="form-control" id="email" placeholder="Email..." asp-for="Input.Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.AppointmentDate"></label>
                <input type="date" class="form-control" id="AppointmentDate" placeholder="Appointment Date..."asp-for="Input.AppointmentDate" asp-format="{0:dd'/'MM'/'yyyy}">
                <span asp-validation-for="Input.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="button-holder d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}