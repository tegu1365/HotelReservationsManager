@using HotelReservationsManager.Models.ViewModels.User
@model IEnumerable<HotelReservationsManager.Data.Models.User>
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<p>
    <a asp-area="Identity" asp-page="/Account/Register">Create User</a>
</p>

<table class="table">
    <thead>
        <tr>
        <tr>
            <th>
                Username
            </th>
            <th>
                Full Name
            </th>
            <th>
                UCN
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>
                Appointment Date
            </th>
            <th>Active</th>
            <th>
                Date Of Dismissal
            </th>
        </tr>
        </tr>
    </thead>
    <tbody>
        @foreach (User item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                    @Html.DisplayFor(modelItem => item.SecondName)
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UCN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>

                @if (item.IsActive)
                {
                    <td>
                        Yes
                    </td>
                }
                else
                {
                    <td>
                        No
                    </td>
                }

                @if (item.DateOfDismissal == new DateTime())
                {
                    <td>
                        -
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfDismissal)
                    </td>
                }
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>